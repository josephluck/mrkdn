{
	"compilerOptions": {
		"target": "es3",
		"module": "commonjs",
		"allowJs": false,
    "outDir": "./bin",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": false,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false,
		"noImplicitAny": true
	},
	"include": [
		"src/**/*"
	]
}